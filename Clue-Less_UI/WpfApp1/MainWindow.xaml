                    <ColumnDefinition Width="52*" />
                    <ColumnDefinition Width="268*"/>
                </Grid.ColumnDefinitions>

                <!-- Accuse, Move, Suggest Sub Grid -->
                <Border BorderBrush="#fff" BorderThickness="1" Padding="1" Background="White" Grid.ColumnSpan="4" Margin="106,0,51.2,-0.2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Column 1 - Accusations Actions -->
                        <StackPanel Grid.Column="0" MinHeight="125">
                            <!-- Sub-Title "Accustation" -->
                            <TextBlock Text="Accusation" Margin="0 3" FontFamily="Broadway" FontSize="15" TextAlignment="Center" Foreground="Black"/>

                            <!-- Grid for Accusation Button and Dropdown Boxes -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Accusation Suspects Title and Dropdown Box-->
                                <StackPanel Grid.Column="0">
                                    <TextBox Text="Suspect" Margin="0 18 0 0" FontFamily="Broadway" FontSize="8" TextAlignment="Center" Foreground="Black" />
                                    <ComboBox ItemsSource="{Binding Path=AccusePeopleStrings}" SelectedValue="{Binding Path=AccusePerson}" x:Name="AccuseSuspect_Dropdown" SelectedIndex="0" Padding="2">
                                    </ComboBox>
                                </StackPanel>

                                <!-- Accusation Button & Weapon Dropdown Box -->
