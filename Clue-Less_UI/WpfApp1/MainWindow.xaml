                                    </ComboBox>
                                </StackPanel>

                                <!-- Accusation Room Title and Dropdown Box -->
                                <StackPanel Grid.Column="3">
                                    <TextBox Text="Room" Margin="0 18 0 0" FontFamily="Broadway" FontSize="8" TextAlignment="Center" Foreground="Black" />
                                    <ComboBox ItemsSource="{Binding Path=AccuseRoomStrings}" SelectedValue="{Binding Path=AccuseRoom}" x:Name="AccuseRoom_Dropdown" SelectedIndex="0" Padding="2" >
                                    </ComboBox>

                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Column 2 - Move -->
                        <StackPanel Grid.Column="1" Background="White"  MinHeight="125">
