        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="410,546,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="619,546,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="759,199,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="548,199,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="340,199,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="759,408,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="548,408,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="109" Margin="340,408,0,0" Stroke="Black" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="950,83,0,0" TextWrapping="Wrap" FontSize="24" Text="Detective Notebook" VerticalAlignment="Top"/>

        <Button x:Name="button" Content="Suggest" HorizontalAlignment="Left" FontSize="18" Background="Green" Margin="1008,402,0,0" VerticalAlignment="Top" Height="46" Width="122"/>
        <Button x:Name="button_Copy" Content="Accuse" HorizontalAlignment="Left" FontSize="18" Background="Red" Margin="1008,475,0,0" VerticalAlignment="Top" Height="46" Width="122"/>
        <ListView x:Name="listView1" Background="LightPink" HorizontalAlignment="Left" Height="211" Margin="863,148,0,0" VerticalAlignment="Top" Width="135">
            <CheckBox x:Name="checkBox1" Content="Rope"/>
            <CheckBox x:Name="checkBox2" Content="Revolver"/>
            <CheckBox x:Name="checkBox3" Content="Wrench"/>
            <CheckBox x:Name="checkBox4" Content="Candlestick"/>
            <CheckBox x:Name="checkBox5" Content="Knife"/>
        </ListView>
        <ListView x:Name="listView1_Copy" Background="Aqua" HorizontalAlignment="Left" Height="211" Margin="1004,148,0,0" VerticalAlignment="Top" Width="135">
            <CheckBox x:Name="checkBox6" Content="Study"/>
            <CheckBox x:Name="checkBox7" Content="Hall"/>
            <CheckBox x:Name="checkBox8" Content="Lounge"/>
            <CheckBox x:Name="checkBox9" Content="Library"/>
            <CheckBox x:Name="checkBox10" Content="Billiard Room"/>
        </ListView>
        <ListView x:Name="listView1_Copy1" Background="Yellow" HorizontalAlignment="Left" Height="211" Margin="1146,148,-1,0" VerticalAlignment="Top" Width="135">
            <CheckBox x:Name="checkBox11" Content="Ryan"/>
            <CheckBox x:Name="checkBox12" Content="Colonel Mustard"/>
            <CheckBox x:Name="checkBox13" Content="BonJovi"/>
            <CheckBox x:Name="checkBox14" Content="Siegfried"/>
            <CheckBox x:Name="checkBox15" Content="Mario"/>
