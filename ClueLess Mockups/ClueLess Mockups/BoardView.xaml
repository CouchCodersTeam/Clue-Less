        <TextBox x:Name="textBox_Copy4" HorizontalAlignment="Left" Margin="728,308,0,0" TextAlignment="Center" IsReadOnly="True" TextWrapping="Wrap" Text="Dining Room" VerticalAlignment="Top" Height="100" Width="100"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="410,337,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="619,337,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <TextBox x:Name="textBox_Copy5" HorizontalAlignment="Left" Margin="310,517,0,0" TextAlignment="Center" IsReadOnly="True" TextWrapping="Wrap" FontSize="13" Text="Conservatory" VerticalAlignment="Top" Height="100" Width="100"/>
        <TextBox x:Name="textBox_Copy6" HorizontalAlignment="Left" Margin="519,517,0,0" TextAlignment="Center" IsReadOnly="True" TextWrapping="Wrap" Text="Ballroom" VerticalAlignment="Top" Height="100" Width="100"/>
