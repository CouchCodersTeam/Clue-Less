        <TextBox x:Name="textBox1" HorizontalAlignment="Left" BorderThickness="0" TextAlignment="Center" FontSize="24" IsReadOnly="True" Margin="28,83,0,0" TextWrapping="Wrap" Text="My Cards" VerticalAlignment="Top" Width="229"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="391" Margin="28,128,0,0" VerticalAlignment="Top" Width="229" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.Items>
                <ListViewItem Background="LightPink">Rope</ListViewItem>
                <ListViewItem Background="LightPink">Revolver</ListViewItem>
                <ListViewItem Background="Aqua">Lounge</ListViewItem>
                <ListViewItem Background="Aqua">Ballroom</ListViewItem>
                <ListViewItem Background="Yellow">Colonel Mustard</ListViewItem>
                <ListViewItem Background="Yellow">BonJovi</ListViewItem>
            </ListView.Items>
        </ListView>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="410,128,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="619,128,0,0" Stroke="Black" VerticalAlignment="Top" Width="109"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Margin="310,308,0,0" TextAlignment="Center" IsReadOnly="True" TextWrapping="Wrap" Text="Library" VerticalAlignment="Top" Height="100" Width="100"/>
